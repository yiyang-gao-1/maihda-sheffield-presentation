                                    <text x="30" y="95" font-size="12" text-anchor="end">75%</text>
                                    <text x="30" y="35" font-size="12" text-anchor="end">100%</text>
                                    
                                    <!-- X-axis labels -->
                                    <text x="50" y="320" font-size="12" text-anchor="middle">0</text>
                                    <text x="150" y="320" font-size="12" text-anchor="middle">3</text>
